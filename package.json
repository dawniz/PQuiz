{
  "name": "poke-quiz-server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www --exec \"npm run lint && node\"",
    "lint": "eslint **/*.js",
    "lint:fix": "eslint **/*.js --fix",
    "client:build": "npm run --prefix ./client build",
    "client:start": "npm start --prefix ./client",
    "client:install": "cd ./client && npm install"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
	"debug": "~2.6.9",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "http-errors": "~1.6.3",
	"jade": "^0.29.0",
    "morgan": "~1.9.1",
    "mysql2": "^3.11.0",
	"node-cron": "^3.0.3",
    "pokedex-promise-v2": "^4.2.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.4",
	  "@eslint/js": "^9.12.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.10.0",
    "prettier": "^3.3.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "**/*.test.js",
      "**/*.spec.js",
      ".git",
      "node_modules",
      "client/*"
    ],
    "events": {
      "restart": "npm run lint"
    }
  }
}
